<div style="display:inline">
  <h2 style="display:inline">Expeditions</h2> <%= link_to "+ Start a new Expedition", new_expedition_path, :class => 'btn btn-success', :style => 'float:right' %>
</div>
<br>
<br>

<% if @user_expeditions.empty? %>
  <h2>You're not signed up for any expeditions yet!</h2>
  <p><%= link_to "Create/Join a new Expedition", upcoming_expedition_path %></p>
<% else %>
  <div class="panel panel-default">
    <div class="panel-heading"><h4>Expeditions You Belong To</h4></div>
    <div class="panel-body">
      <table class="table table-hover table-bordered table-condensed">
        <thead>
          <tr>
            <th>Title</th>
            <th>Start</th>
            <th>No. Days</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @user_expeditions.each do |expedition| %>
            <tr>
              <td><%= link_to "#{expedition.title}", packing_list_path(expedition_id: expedition.id) %></td>
              <td><%= expedition.start_date %></td>
              <td><%= expedition.days %></td>
              <td><%= link_to 'details', expedition_details_path(expedition_id: expedition.id) %>
                  <%= " / " %>
                  <%= link_to 'remove', unjoin_expedition_path(expedition_id: expedition.id), data: { confirm: 'Are you sure you want to leave this expedition?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>

<% if @public_expeditions.empty? %>
  <h2>No expeditions available to join.</h2>
  <h3><%= link_to "Make a new one", new_expedition_path %></h3>
<% else %>
<!--   <h3>Join one below, or <%= link_to "make a new one", new_expedition_path %></h3>
 -->  <div class="panel panel-default">
    <div class="panel-heading"><h4>Public Expeditions</h4></div>
    <div class="panel-body">
      <table class="table table-hover table-bordered table-condensed">
        <thead>
          <tr>
            <th>Title</th>
            <th>Start</th>
            <th>No. Days</th>
            <th>Status</th>
            <!-- <th colspan="3"></th> -->
          </tr>
        </thead>

        <tbody>
          <% @public_expeditions.each do |expedition| %>
            <tr>
              <td><%= link_to "#{expedition.title}", packing_list_path(expedition_id: expedition.id) %></td>
              <td><%= expedition.start_date %></td>
              <td><%= expedition.days %></td>
              <% if expedition.users.where(id: @user.id).empty? %>
                <td><%= link_to "Join", join_expedition_path(expedition_id: expedition.id) %></td>
              <% else %>
                <td>Signed Up</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>



