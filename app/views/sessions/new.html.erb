<div class="container">
  <div class="row">
    <h2 style="text-align: center"> Welcome to Pack Tracker! </h2><br>

    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Please Sign In</h3>
        </div>
        <div class="panel-body">
          <%= form_tag :login, html: { class: 'form-hozisontal' } do %>
            <div class="form-group">
              <%= label_tag :email %>
              <%= text_field_tag :email, nil, class: 'form-control input-lg' %>
            </div>
            <div class="form-group">
              <%= label_tag :password %>
              <%= password_field_tag :password, nil, class: 'form-control input-lg' %>
            </div>
            <div class="actions">
              <%= submit_tag "Login", class: 'btn btn-lg btn-success btn-block' %>
            </div>
            <br>
            <div class="actions">
              <%= link_to "Don't have an account? Sign Up!", sign_up_path, :class => 'btn btn-lg btn-default btn-block' %>
            </div>
          </div>
            
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
